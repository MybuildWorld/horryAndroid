<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="textcolorMyValue">@color/colorBlack</item>
        <item name="backgroundMyValue">@color/textColorPrimary</item>
        <item name="toolbarMyColor">@color/colorPrimary</item>
        <item name="BKColor">@color/ColorGray</item>
        <item name="toolbartextMyColor">@color/textColorPrimary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="nightTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="textcolorMyValue">@color/textColorPrimary</item>
        <item name="backgroundMyValue">@color/Primary</item>
        <item name="toolbarMyColor">@color/ColorDark</item>
        <item name="toolbartextMyColor">@color/textColorPrimary</item>
        <item name="BKColor">@color/ColorDark</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NightMode" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="colorAccent">@color/Accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
